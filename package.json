{
  "name": "@helptheweb/accessibility-engine",
  "version": "0.0.1",
  "description": "Custom accessibility testing engine for WCAG compliance",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "src/index.d.ts",
  "type": "module",
  "bin": {
    "helptheweb": "./src/cli/index.js"
  },
  "scripts": {
    "build": "bun build src/index.js --outdir=dist --format=esm",
    "test": "bun test",
    "dev": "bun run src/index.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "cli": "bun run src/cli/index.js"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "testing",
    "web",
    "aria",
    "screen-reader",
    "disability",
    "compliance"
  ],
  "author": "HelpTheWeb",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "jsdom": "^23.0.0",
    "node-fetch": "^3.3.2",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/helptheweb/engine.git"
  },
  "bugs": {
    "url": "https://github.com/helptheweb/engine/issues"
  },
  "homepage": "https://helptheweb.org"
}
